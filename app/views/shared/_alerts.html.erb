<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Overtime App Alert", sticky: false, image: :notice) %>
<% elsif flash[:error]  %>
  <%= js add_gritter(flash[:error], title: "Overtime AppError", sticky: false, image: :notice) %>
<% else  %>
  <%= js add_gritter(flash[:notice], title: "Overtime App Notification", sticky: false, image: :notice) %>
<% end %>