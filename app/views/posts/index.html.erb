
<h1>Posts</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>
        #
      </th>
      <th>
        Date
      </th>
      <th>
        User
      </th>
      <th>
        Rationale
      </th>
       <th>
        Created
      </th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= post.id %>
        </td>
        <td>
          <%= post.date %>
        </td>
        <td>
          <%= post.user.last_name %>
        </td>
        <td>
          <%= truncate(post.rationale) %>
        </td>
        <td>
          Created <%= distance_of_time_in_words(post.created_at, Time.now)   %> ago
        </td>
      </tr>
    <% end %>
  </tbody>
</table>